<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/light_background</item>
    </style>

    <style name="WhiteStandard">
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteSmall" parent="WhiteStandard">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PrimaryStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryLightStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="GraySmall" parent="WhiteStandard">
        <item name="android:textColor">@color/color_separate_line</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editTextRound" parent="WhiteStandard">
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/activity_very_small_margin</item>

    </style>

    <style name="BlueButton" parent="editTextRound">
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/activity_big_margin</item>

    </style>

    <style name="WhiteButtonOpen" parent="editTextRound">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="WhiteButton" parent="editTextRound">
        <item name="android:layout_width">190dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RedButton" parent="BlueButton">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="YellowSmall" parent="GraySmall">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="YellowStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/yellow</item>
    </style>

</resources>
