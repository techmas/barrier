<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="navigationIcon">@drawable/ic_menu_24dp</item>
        <item name="android:configChanges">orientation</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/background_light</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="navigationIcon">@drawable/ic_menu_24dp</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="SplashScreen" parent="NoToolbarTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="WhiteStandard">
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WhiteSmall" parent="WhiteStandard">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BlackSmall">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="PrimaryStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryLightStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="GraySmall" parent="WhiteStandard">
        <item name="android:textColor">@color/color_separate_line</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="editTextRound" parent="WhiteStandard">
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/activity_very_small_margin</item>

    </style>

    <style name="BlueButton" parent="editTextRound">
        <item name="android:background">@drawable/rounded_button_blue</item>
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/activity_big_margin</item>

    </style>

    <style name="WhiteButtonOpen" parent="editTextRound">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="WhiteButtonNew">
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/activity_very_small_margin</item>
    </style>

    <style name="WhiteButton" parent="editTextRound">
        <item name="android:layout_width">190dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RedButton" parent="BlueButton">
        <item name="android:background">@drawable/rounded_button_red</item>
    </style>

    <style name="YellowSmall" parent="GraySmall">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="YellowStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="LightEditText">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>
        <item name="android:textColor">@color/light_background</item>
    </style>

    <style name="LightInput">
        <item name="android:layout_marginStart">@dimen/activity_ultra_big_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_ultra_big_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>


