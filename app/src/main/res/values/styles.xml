<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorAccent">@color/light_background</item>
    </style>

    <style name="WhiteStandard" >
        <item name="android:textColor">@color/light_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrimaryStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PrimaryLightStandard" parent="WhiteStandard">
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="editTextRound">
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
